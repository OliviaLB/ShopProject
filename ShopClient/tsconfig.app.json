{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "types": ["vite/client"],
    "skipLibCheck": true,

    /* Bundler mode */
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "noEmit": true,
    "verbatimModuleSyntax": true,

    /* Linting */
    "alwaysStrict": true, // parses files in strict mode + emits "use strict"
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true, // error on variables that implicitly have 'any' type
    "noImplicitThis": true, // error on 'this' expressions with an implied 'any' type
    "noUncheckedSideEffectImports": true,
    "strict": true,
    "strictBindCallApply": true, // catches bad usage of .bind(), .call(), .apply()
    "strictFunctionTypes": true, // ensures function parameters are checked more strictly
    "strictNullChecks": true, // null/undefined are only assignable to themselves
    "useUnknownInCatchVariables": true // forces you to properly type `catch` blocks
  },
  "include": ["src", "tests"]
}
